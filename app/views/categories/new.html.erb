<h1 align="center">Create new category</h1>

<%= render 'shared/errors', obj: @category %>

<%= form_for @category do |f| %>
  <div class="form-group row">
    <%= f.label :category, class: "col-sm-2 col-form-label" %><br/>
    <div class="col-sm-8">
      <%= f.text_field :name, class: "form-control", placeholder: "Category name" %>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-sm-8 offset-sm-2">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
<div class="col-sm-8 offset-sm-4">
  [<%= link_to "Cancel request and return to Articles list", articles_path %>]
</div>
