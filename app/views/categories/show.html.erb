<h1 align="center"><%= "Category: " + @category.name %></h1>
<% if logged_in? and current_user.admin? %>
  <div class="row justify-content-center bottom_pagination">
    <span class="badge badge-primary"><%= link_to "Edit Category Name", edit_category_path(@category), class: "btn btn-sm btn-primary" %></span>
  </div>
<% end %>
<br>
<div class="row justify-content-center">
  <%= will_paginate @category_articles %>
</div>
<%= render 'articles/article', obj: @category_articles %>
<div class="row justify-content-center bottom_pagination">
  <%= will_paginate  @category_articles %>
</div>
